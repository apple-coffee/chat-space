%body
  .flash-box

  .wrapper
    .chat-side
      .side-header
        .side-header__box
          %p.side-header__box__user-name test-user
          %ul.side-header__box__menu
            %li.side-header__box__menu__new-group
              %i(href="#" class="fa fa-edit")
            %li.side-header__box__menu__edit-user
              %i(href="#" class="fa fa-cog")
      .groups
        %a(href="#" class="group")
          .group
            %p.group__group-name test-group
            %p.group__latest-message まだメッセージがありません
          .group
            %p.group__group-name test-group
            %p.group__latest-message まだメッセージがありません

    .chat-main
      .main-header
        .main-header__left-box
          %h2.main-header__left-box__current-group test-group
          %ul.main-header__left-box__member-list Member：test-user
        %a(href="#" class="main-header__edit-btn") Edit
      .messages
        .message
          .message__upper-info
            %p.message__upper-info__talker test-user
            %p.message__upper-info__date 2019/11/03(Sun) 23:47:40
          %p.message__text a
          .message__upper-info
            %p.message__upper-info__talker user1
            %p.message__upper-info__date 2019/11/04(Mon) 04:10:00
          %p.message__text a

      .form
        %form(class="new_message")
          .input-box
            %input(placeholder="  type a message" class="input-box__text" type="text")
            %label(class="input-box__image" for="message_image")
              %i(href="#" class="fa fa-image")
              %input(class="input-box__image__file" type="file" name="message[image]" id="message_image")
          %input(type="submit" name="commit" value="Send" class="submit-btn" data-disable-with="Send")
